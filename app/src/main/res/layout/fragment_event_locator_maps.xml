<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_fragment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/event_maps_searchbar"
            layout="@layout/component_map_searchbar"
            android:layout_width="match_parent"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="14%"
            android:layout_centerHorizontal="true"
            app:layout_marginRightPercent="7%"
            app:layout_marginLeftPercent="7%"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/current_location_button"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/ic_my_location_black_24dp"
            android:scaleType="fitCenter"
            app:backgroundTint="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_marginBottomPercent="3%"
            app:layout_marginRightPercent="3%"
            />
    </android.support.percent.PercentRelativeLayout>
</FrameLayout>