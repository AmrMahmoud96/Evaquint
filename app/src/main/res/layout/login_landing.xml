<com.evaquint.android.modules.FittedView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.evaquint.android.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <com.evaquint.android.modules.FittedView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/login_progress">
        <ImageView
            app:layout_widthPercent="100%"
            app:layout_heightPercent="30%"
            android:src="@drawable/logo"
            android:id="@+id/imageView3"
            android:layout_centerInParent="true"
            app:layout_marginTopPercent="1%"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/email" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button2"
            android:layout_below="@+id/button2"
            android:text="Continue With Facebook"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Continue With Facebook"
            android:textStyle="bold"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3" />


    </com.evaquint.android.modules.FittedView>



</com.evaquint.android.modules.FittedView>
