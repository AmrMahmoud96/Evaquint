<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.evaquint.android.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <!--<ImageView-->
            <!--app:layout_widthPercent="30%"-->
            <!--app:layout_heightPercent="20%"-->
            <!--android:src="@mipmap/ic_launcher"-->
            <!--android:id="@+id/imageView3"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentStart="true" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_marginBottomPercent="5%"
            android:layout_marginTop="51dp"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/login_landing_placeholder_image"
            android:layout_below="@+id/textView6"
            android:src="@drawable/placeholder"
            android:layout_width="match_parent"
            app:layout_marginLeftPercent="12%"
            app:layout_marginRightPercent="12%"
            />

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/slogan"-->
            <!--android:textColor="@color/dark_blue"-->
            <!--app:layout_marginLeftPercent="5%"-->
            <!--android:textStyle="italic"-->
            <!--android:textSize="15dp"-->
            <!--android:textAlignment="textStart"-->
            <!--android:fontFamily="monospace"-->
            <!--app:layout_marginBottomPercent="5%"-->
            <!--android:id="@+id/textView5"-->
            <!--android:layout_below="@+id/textView6"-->
            <!--android:layout_alignParentEnd="true" />-->

        <in.championswimmer.libsocialbuttons.buttons.BtnGoogleplus
            android:id="@+id/login_google"
            style="@style/SocialButton"
            app:layout_marginTopPercent="9%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Continue With Google"
            android:layout_below="@+id/login_landing_placeholder_image"/>

        <in.championswimmer.libsocialbuttons.buttons.BtnFacebook
            android:id="@+id/login_facebook"
            style="@style/SocialButton"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignStart="@+id/login_google"
            android:layout_below="@+id/login_google"
            android:text="Continue With Facebook"/>


        <TextView
            style="@style/Text.Small"
            android:id="@+id/more_options_btn"
            app:layout_marginLeftPercent="6%"
            app:layout_marginTopPercent="2%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/login_facebook"
            android:text="More Options" />

        <TextView
            style="@style/Text.Small"
            android:id="@+id/to_login"
            app:layout_marginLeftPercent="8%"
            app:layout_marginTopPercent="2%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/login_facebook"
            android:layout_toEndOf="@id/more_options_btn"
            android:textColor="@color/black"
            android:text="@string/register_or_sign_in" />

        <!--<TextView-->
            <!--android:id="@+id/to_register"-->
            <!--app:layout_marginLeftPercent="6%"-->
