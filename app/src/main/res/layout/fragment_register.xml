<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/white"
    tools:context="com.evaquint.android.LoginActivity">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="25%"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/sign_in_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@+id/login_progress"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Sign Up" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/firstNameField"
                style="@android:style/Widget.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="51dp"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="2dp"
                android:elevation="0dp"
                android:ems="15"
                android:fadingEdgeLength="0dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="6dp"
                android:shadowColor="@color/bb_tabletRightBorderDark"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/lastNameField"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="51dp"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="2dp"
                android:elevation="0dp"
                android:ems="15"
                android:fadingEdgeLength="0dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="6dp"
                android:shadowColor="@color/bb_tabletRightBorderDark"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/emailField"
                style="@android:style/Widget.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstNameField"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="51dp"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="2dp"
                android:ems="15"
                android:fadingEdgeLength="0dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="6dp"
                android:shadowColor="@color/bb_tabletRightBorderDark"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/passwordField"
                style="@android:style/Widget.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/email"
                android:layout_below="@+id/email"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="2dp"
                android:ems="15"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/password"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/password"
                android:layout_marginTop="20dp"
                android:background="@color/Grey_2"
                android:text="Register"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/switch_button"
                style="@style/Base.V12.Widget.AppCompat.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/textView8"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/action_switch_register"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/com_facebook_button_send_background_color" />

        </LinearLayout>

    </RelativeLayout>


</android.support.percent.PercentRelativeLayout>
